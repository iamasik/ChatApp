<%- include('_header') %>


<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-2 col-md-1 col-sm-12 col-12">
            
        </div>
        <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12 col-12">
            <div style="margin-top: 50px; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 10px 2px #007bff;">
                <form method="post" class="update" enctype="multipart/form-data">
                    <div class="text-center">
                        <p style="padding-bottom: 10px;"><b>Update your info:</b></p>

                    </div>
                    <div class="info">

                    </div>
                    <div class="form-outline mb-1">
                        <label class="form-label" for="name">Full name:</label>
                      <input type="text" name="name" value="<%= ViewData.name %>"  id="name" class="form-control" />
                    </div>

                    <div class="form-outline mb-1">
                        <label class="form-label" for="email">Email address:</label>
                      <input type="email" name="email" value="<%= ViewData.email %>" id="email" class="form-control" />
                    </div>

                    <div class="form-outline mb-1">
                        <label class="form-label" for="phone">Phone number:</label>
                        <input type="text" name="phone" value="<%= ViewData.phone %>" id="phone" class="form-control" />
                    </div>
                    <!-- <div class="form-outline mb-1">
                        <label class="form-label" for="dob">Date of birth:</label>
                        <input type="date" name="dob" value="dob" id="dob" class="form-control" />
                    </div> -->
                    <div class="form-outline mb-1">
                        <label class="label-same" for="gender">Gender:</label><br>
                        <select name="role" id="gender" >
                          <option value="male">Male</option>
                          <option value="female">Female</option>
                          <option value="others">Others</option>
                        </select>
                    </div>
                    <div class="form-outline mb-1" style="padding-bottom: 5px;">
                      <label for="image" class="form-label">Profile Picture:</label>
                      <input class="form-control" type="file" id="image" name="image" accept="image/*">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mb-4">Update</button>
                  </form>

 
            </div>
        </div>
        <div class="col-xl-3 col-lg-2 col-md-1 col-sm-12 col-12">

        </div>
    </div>
</div>


<script src="/js/update.js"></script>

<%- include('_footer') %>

